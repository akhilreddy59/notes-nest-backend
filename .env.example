# Copy this file to .env and fill the values before running the app
# Do NOT commit your real .env to source control. Use a secrets manager in production.

# Database Connection
MONGO_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/<dbname>?retryWrites=true&w=majority

# Security
ADMIN_PASSWORD=change_me_secure_password
JWT_SECRET=replace_with_a_long_random_secret

# Server Configuration
PORT=5000
FRONTEND_URL=http://localhost:3000 # In production, set to your actual frontend domain
